
                <h1>Welcome to SoftUni Wiki!</h1>
                <section>
                    <h2>Edit article
                        {{#ifAdmin user.username}}
                        <div class="controls">
                            <a href="/article/{{_id}}/lock">Lock article</a>
                            <a href="/article/{{_id}}/unlock">Unlock article</a>
                        </div>
                        {{/ifAdmin}}
                    </h2>
                    <div class="spacer">
                        <form method="POST" action="/article/edit/{{_id}}">
                            <label>Article title</label>
                            <h3>{{title}}</h3>
                            <label>Content</label>
                            <textarea name="content" >
                               {{content}}
                            </textarea>
                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </section>
           